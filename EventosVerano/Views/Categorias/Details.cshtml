@model EventosVerano.Models.Categoria

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
</div>

<div>
    <h4>Evento</h4>
    <hr/>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Título")
                </th>
                <th>
                    @Html.DisplayName("Fecha")
                </th>
            </tr>
        </thead>
        <tbody>
        
        @foreach(Evento evento in ViewBag.Events) {
            <tr>
                <td><a asp-controller="Eventos" asp-action="Details" asp-route-id="@evento.Id">@Html.DisplayFor(modelItem => evento.Titulo)</a></td>
                <td>
                    @Html.DisplayFor(modelItem => evento.Fecha)
                </td>
            </tr>
        }

    <table/>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
